<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="50dp">
    <TextView android:layout_width="match_parent"
              android:text="Add A Plant To Your Inventory"
              android:layout_height="wrap_content" android:textStyle="normal|bold" android:textSize="18sp"
              android:paddingBottom="10dp"/>
    <TextView android:layout_width="match_parent"
              android:text="Choose the plant species"
              android:layout_height="wrap_content" android:foregroundTintMode="src_over"/>
    <Spinner android:layout_width="match_parent"
             android:id="@+id/spinner"
             android:layout_height="wrap_content" android:paddingTop="10dp" android:paddingBottom="10dp"></Spinner>
    <EditText android:layout_width="match_parent"
              android:hint="Location name" android:id="@+id/txtPlantLocation"
              android:layout_height="wrap_content"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <Button android:layout_width="wrap_content"
                android:text="SAVE" android:id="@+id/btnSave"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="wrap_content"
                android:text="CANCEL" android:id="@+id/btnCancel"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>